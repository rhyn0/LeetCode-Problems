{
    "ruff.lint.args": [
        "--config",
        "pyproject.toml"
    ],
    "ruff.format.args": [
        "--config",
        "pyproject.toml"
    ],
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ],
        "editor.formatOnType": false,
        "editor.wordBasedSuggestions": "off",
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
    },
    "editor.formatOnSave": true,
    "editor.fontFamily": "'Monaspace Xenon', Menlo, Monaco, 'Courier New', monospace",
    "errorLens.fontFamily": "'Monaspace Argon', monospace",
    "editor.inlayHints.fontFamily": "'Monaspace Krypton', monospace",
}
